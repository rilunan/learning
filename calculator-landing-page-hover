<script>

function hoverClans(element) {
  element.setAttribute('src', 'clans-fade.jpg');
}

function unhoverClans(element) {
  element.setAttribute('src', 'clans.jpg');
}

function hoverGwt(element) {
  element.setAttribute('src', 'gwt-fade.jpg');
}

function unhoverGwt(element) {
  element.setAttribute('src', 'gwt.jpg');
}

function hoverScythe(element) {
  element.setAttribute('src', 'scythe-fade.jpg');
}

function unhoverScythe(element) {
  element.setAttribute('src', 'scythe.jpg');
}


